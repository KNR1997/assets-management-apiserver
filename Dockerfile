# -------- Build stage --------
FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server ./cmd/api

# -------- Runtime stage --------
FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/server .
COPY .env .env

EXPOSE 8080

CMD ["./server"]
